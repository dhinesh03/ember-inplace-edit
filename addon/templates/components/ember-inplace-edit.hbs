{{#if isEditing}}
  <form {{action "doneEditing" on="submit"}}>
    {{#if isTypeInput}}
      {{input value=value autoresize=autoResize}}
    {{else}}
      {{textarea value=value autoresize=autoResize}}
    {{/if}}
  </form>
{{else}}
  {{! template-lint-disable quotes}}
  <span class="edit-box {{if disabled 'edit-box-disabled' ''}}" {{action "startEditing"}} role="button">
    {{#if displayPlaceholder}}
      <div class={{placeholderClass}}>
        {{placeholder}}
      </div>
    {{else}}
      {{text}}
    {{/if}}
  </span>
  <span class="edit hide {{if disabled 'edit-button-disabled' ''}}">
    {{#if editIcon}}
      <a {{action "startEditing"}} class={{editIcon}} role="button"></a>
    {{else}}
      <button {{action "startEditing"}}>edit</button>
    {{/if}}
  </span>
{{/if}}